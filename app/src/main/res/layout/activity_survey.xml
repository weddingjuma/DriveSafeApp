<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.samples.vision.face.facetracker.SurveyActivity">

    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/exhausted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhausted"/>
        <RadioButton
            android:id="@+id/verytired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very tired"/>
        <RadioButton
            android:id="@+id/bittired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A bit tired"/>
        <RadioButton
            android:id="@+id/nottired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not tired"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/group1">

        <RadioButton
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"/>
        <RadioButton
            android:id="@+id/highway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highway"/>
    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group2"
        android:text="Submit"/>

</RelativeLayout>
